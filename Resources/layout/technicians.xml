<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Refractored.Controls.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/man"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/MngsColor"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:layout_marginLeft="5dp"
                android:textColor="@color/MngsColor"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="..."/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        

        <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:id="@+id/discontinue"
                    android:text="discontinue"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:text="Problem logged: "/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:id="@+id/task"
                android:text="..."/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:id="@+id/binbtn"
                    android:visibility="gone"
                    android:text="Bin"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/percount"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical"
        android:text="0"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical"
        android:text="% done"/>


        </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:progress="0"
        android:id="@+id/progBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical"
        android:id="@+id/ratedmsg"
        android:text="Rated : no"/>
</LinearLayout>
